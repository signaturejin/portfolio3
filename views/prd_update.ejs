<!-- 관리자가 아니면 들어올 수 없음 -->
<% if(!userData || userData.join_id != "admin"){ %>
    <script>
        alert("관리자만 이용할 수 있는 페이지입니다.");
        location.href = "/login";
    </script>
<% } %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>관리자용 상품 수정 페이지</title>
    <!-- css -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- 웹폰트 및 아이콘 -->
    <%- include("common/icon_font.ejs") %>
</head>
<body>
    <!-- 상단 영역 -->
    <%- include("common/header.ejs") %>
    <!-- 중간 영역 -->
    <main id="container">
        <div class="prd_update_area prd_form_area">
            <div class="center">
                <form id="prd_update_form" class="prd_area_form" action="/update/prd" method="post" enctype="multipart/form-data">
                    <!-- admin 외 다른 사람이 글 삭제 / 수정 못하게 하기 위한 태그 -->
                    <input type="hidden" name="write_id" class="write_id" value="<%- userData.join_id %>">
                    <!-- 게시글 번호로 업데이트할 게시글을 알아내기 위한 히든태그 -->
                    <input type="hidden" name="card_no" value="<%- prdData.card_no %>">
                    <div class="wrap">
                        <!-- 카드 분류 -->
                        <label for="card_category">카드 종류</label>
                        <select name="card_category" class="card_category">
                            <option value="추천카드">추천카드</option>
                            <option value="멀티카드">멀티카드</option>
                            <option value="신용카드">신용카드</option>
                            <option value="체크카드">체크카드</option>
                            <option value="제휴카드">제휴카드</option>
                        </select>
                        <!-- 카드 파일 -->
                        <label for="card_file">카드 파일</label>
                        <input type="file" name="card_file" class="card_file">
                        <!-- 파일교체 안했을 시를 위한 히든태그 -->
                        <input type="hidden" name="sel_file" class="sel_file" value="<%- prdData.card_file %>">
                    </div>
                    <!-- 카드 이름 -->
                    <label for="card_name">카드 이름</label>
                    <input type="text" name="card_name" class="card_name" value="<%- prdData.card_name %>">
                    <!-- 카드 혜택1 -->
                    <label for="card_benefit1">카드 혜택1</label>
                    <input type="text" name="card_benefit1" class="card_benefit1" value="<%- prdData.card_benefit1 %>">
                    <!-- 카드 혜택2 -->
                    <label for="card_benefit2">카드 혜택2</label>
                    <input type="text" name="card_benefit2" class="card_benefit2" value="<%- prdData.card_benefit2 %>">
                    <!-- 카드 혜택3 -->
                    <label for="card_benefit3">카드 혜택3</label>
                    <input type="text" name="card_benefit3" class="card_benefit3" value="<%- prdData.card_benefit3 %>">
            
                    <button class="card_prd_btn">수정하기</button>
                </form>
            </div>
        </div>
    </main>
    <!-- 하단 영역 -->
    <%- include("common/footer.ejs") %>
</body>
</html>